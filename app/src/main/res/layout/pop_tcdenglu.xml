<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pop_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_125"
        android:background="@drawable/popwhite_bg"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_5"
            android:text="@string/w_sftcdl"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/sy_linesbg"
            android:layout_marginBottom="@dimen/dp_45"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="@dimen/dp_45"
            android:background="@color/sy_linesbg"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                android:text="@string/quxiao"
                android:gravity="center"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/lanse"
                android:text="@string/queren"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>